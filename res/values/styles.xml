<resources>
    <!-- Gaya Tombol Utama -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Gaya TextView untuk Nama Player -->
    <style name="TextPlayerName" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Gaya Card untuk Item di Shop -->
    <style name="CardItemStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">6dp</item>
    </style>
</resources>